{
  "name": "electron-queue-lol",
  "version": "1.1.7",
  "description": "A simple way to accept a League of Legends queue",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerobas/lol-queue-app"
  },
  "scripts": {
    "dev": "concurrently \"webpack serve --mode development\" \"wait-on http://localhost:8080 && cross-env NODE_ENV=development electron src/main.js\"",
    "start": "webpack && cross-env NODE_ENV=development electron src/main.js",
    "build": "webpack && electron-builder",
    "msi": "node src/msi.js"
  },
  "build": {
    "appId": "com.jerobas.AutoQueue",
    "productName": "AutoQueue",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/assets/lol.ico"
    },
    "msi": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoQueue",
      "oneClick": false,
      "perMachine": false
    }
  },
  "keywords": [
    "lol",
    "AutoQueue",
    "electron"
  ],
  "author": "Fl√°vio Filho",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.0.1",
    "css-loader": "^7.1.2",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "electron-wix-msi": "^5.1.3",
    "file-loader": "^6.2.0",
    "sass": "^1.79.4",
    "sass-loader": "^16.0.2",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-updater": "^6.3.4",
    "express": "^4.21.0",
    "notyf": "^3.10.0"
  }
}
