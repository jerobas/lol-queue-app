{
  "name": "electron-queue-lol",
  "version": "1.1.3",
  "description": "A simple way to accept a League of Legends queue",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerobas/lol-queue-app"
  },
  "scripts": {
    "start": "electron src/main.js",
    "build": "electron-builder",
    "msi": "node src/msi.js"
  },
  "build": {
    "appId": "com.jerobas.AutoQueue",
    "publish": [
      {
        "provider": "github",
        "owner": "jerobas",
        "repo": "lol-queue-app",
        "token": "${{ secrets.GITHUB_TOKEN   }}"
      }
    ],
    "productName": "AutoQueue",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/assets/lol.ico"
    },
    "msi": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoQueue",
      "oneClick": false,
      "perMachine": false
    }
  },
  "keywords": [
    "lol",
    "AutoQueue",
    "electron"
  ],
  "author": "Fl√°vio Filho",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "electron-wix-msi": "^5.1.3"
  },
  "dependencies": {
    "electron-updater": "^6.3.4",
    "axios": "^1.7.7",
    "express": "^4.21.0"
  }
}